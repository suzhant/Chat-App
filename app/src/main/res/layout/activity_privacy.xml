<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPurple"
    tools:context=".Privacy">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/linear_bg">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUpdateEmail"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_et_message"
            android:backgroundTint="@color/colorPurple"
            android:padding="15dp"
            android:text="Update Email"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUpdatePass"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnUpdateEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_et_message"
            android:backgroundTint="@color/colorPurple"
            android:padding="15dp"
            android:text="Change password"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:rippleColor="@color/grayBackground" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDeleteAcc"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnUpdatePass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/bg_et_message"
            android:backgroundTint="@color/colorPurple"
            android:padding="15dp"
            android:text="Delete Account"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:rippleColor="@color/grayBackground" />

    </RelativeLayout>




</RelativeLayout>
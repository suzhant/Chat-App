<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:id="@+id/groupChatRelative"
android:layout_width="wrap_content"
android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="11dp"
        android:maxWidth="310dp"
        android:maxHeight="400dp"
        android:minHeight="30dp"
        android:orientation="vertical">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardViewSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imgSender"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/avatar"
                android:visibility="gone" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/layout_audio"
            android:background="@drawable/bg_et_message"
            android:backgroundTint="@color/purple_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:visibility="gone">
            <ImageView
                android:id="@+id/img_play_record"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_play"
                android:padding="5dp"
                android:tint="@color/white"/>

            <TextView
                android:id="@+id/txt_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Play Recording"
                android:padding="5dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"/>
        </LinearLayout>

    <FrameLayout
        android:background="@drawable/bg_sender"
        android:backgroundTint="@color/purple_700"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine|textLongMessage"
            android:layout_marginEnd="5dp"
            android:maxWidth="270dp"
            android:minWidth="50dp"
            android:padding="10dp"
            android:text="asdfasdfasdasdfdasfasdfasfdasdfasdffasfdaasfdasfd"
            android:textColor="@color/white" />

    </FrameLayout>
        <TextView
            android:id="@+id/txtSenderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="4dp"
            android:text="12:00pm"
            android:textSize="10sp"
            app:layout_goneMarginBottom="4dp" />

    </LinearLayout>


</RelativeLayout>
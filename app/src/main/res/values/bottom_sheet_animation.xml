<resources>
<style name="DialogAnimation">
    <item name="android:windowEnterAnimation">@anim/bottom_up</item>
    <item name="android:windowExitAnimation">@anim/bottom_down</item>
</style>
    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="DialogAnimation_3">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="NoAnimation" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>